# .env.example
# ============================================
# Шаблоны конфигурации переменных среды FastAPI E - commerce Platform
# ============================================
# Копировать этот файл в.env и заполнить его фактическим значением
# ============================================

# ============================================
# Настройка приложений
# ============================================
PROJECT_NAME="FastAPI E-commerce Platform"
VERSION="1.0.0"
API_V1_STR="/api/v1"
DEBUG="False"

# ============================================
# конфигурация сервера
# ============================================
HOST="0.0.0.0"
PORT="8000"

# ============================================
# Настройка базы данных
# ============================================
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# ============================================
# Настройка Redis
# ============================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
REDIS_DB="0"

# ============================================
# Настройка JWT
# ============================================
# Создание ключа безопасности: openssl rand - hex 32
SECRET_KEY="your-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES="10080"

# ============================================
# Настройка CORS
# ============================================
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ============================================
# Настройка загрузки файлов
# ============================================
UPLOAD_DIR="./uploads"
MAX_UPLOAD_SIZE="10485760"
ALLOWED_IMAGE_TYPES=["image/jpeg", "image/png", "image/gif", "image/webp"]

# ============================================
# Настройка почтового ящика
# ============================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-specific-password"
EMAILS_FROM_EMAIL="your-email@gmail.com"
EMAILS_FROM_NAME="FastAPI E-commerce Platform"

# ============================================
# Настройка кода проверки
# ============================================
OTP_EXPIRE_MINUTES="10"
OTP_LENGTH="6"

# ============================================
# Расположение магазинов
# ============================================
DEFAULT_SHOP_PASSWORD_LENGTH="8"
MAX_SHOP_MEMBERS="10"

# ============================================
# Настройка кэша
# ============================================
CACHE_TTL="300"
ENABLE_CACHE="True"
